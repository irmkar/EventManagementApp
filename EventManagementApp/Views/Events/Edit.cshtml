@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#IsPaid').change(function () {
                if ($(this).is(':checked')) {
                    $('#priceField').show();
                } else {
                    $('#priceField').hide();
                }
            });
        });
    </script>
}
