@model EventManagementApp.Models.Event
@{
}

<div class="container mt-4 d-flex flex-column" style="min-height: 100vh;">

    <h2>Düzenle</h2>

    <form asp-action="Edit" class="flex-grow-1">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3">
            <label asp-for="Title" class="control-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Location" class="control-label">Yer</label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Date" class="control-label">Zaman</label>
            <input asp-for="Date" class="form-control" type="datetime-local" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="IsPaid" class="control-label">Ücretli Mi?</label>
            <input asp-for="IsPaid" class="form-check-input" type="checkbox" />
            <span asp-validation-for="IsPaid" class="text-danger"></span>
        </div>
        <div class="form-group mb-3" id="priceField" style="@(Model.IsPaid ? "display:block;" : "display:none;")">
            <label asp-for="Price" class="control-label">Ücret TL</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EventType" class="control-label">Etkinlik Tipi</label>
            <select asp-for="EventType" class="form-control">
                <option value="Konferans">Konferans</option>
                <option value="Seminer">Seminer</option>
                <option value="Workshop">Workshop</option>
                <option value="Eğitim">Eğitim</option>
            </select>
            <span asp-validation-for="EventType" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ImageUrl" class="control-label">Görsel</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mt-auto d-flex justify-content-end gap-2 mb-5">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a class="btn btn-secondary" asp-action="Index">İptal</a>
        </div>

    </form>

